@page "/cadastrousuario"
<h3>Cadastro de Usuário</h3>

<EditForm Model="novoUsuario" OnValidSubmit="CadastrarUsuario">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nome">Nome</label>
        <InputText id="nome" class="form-control" @bind-Value="novoUsuario.Nome" />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="novoUsuario.Email" type="email" />
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <InputText id="senha" class="form-control" @bind-Value="novoUsuario.Senha" type="password" />
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</EditForm>

